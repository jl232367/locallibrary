extends layout

block content
  h1 #{title}: #{book.title}
  

  if referenced_book_instances.length

    p #[strong Delete the following book instances before deleting this book!]

    div(style='margin-left:20px;margin-top:20px')

      h4 Book Instances

      dl
      each book_instance in referenced_book_instances 
        dt
          a(href=book_instance.url) Book Instance!
        dd #{book_instance.status}
        

  else
    p Do you really want to delete this book?

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden',name='bookid', required='true', value=book._id)

      button.btn.btn-primary(type='submit') Delete
